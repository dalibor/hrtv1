:javascript
  var _activity_id = "#{@activity.id}";

%h1.main_heading
  = link_to @activity.name.presence || "Unnamed #{@activity.class.to_s.titleize}", edit_response_activity_path(@response, @activity), :title => @activity.description, :class => 'tooltip'
  %span.sub
    = "#{@activity.class.to_s.underscore.humanize.titleize}"
    = render 'help'

= render 'uncoded_overlay', :activity => @activity
= render 'getting_started'
= render 'activities/tab_nav', :activity => @activity

#classification
  #activity_classification
    %div.tab1{:style => 'display: block'}
      = render 'tab'
