:javascript
  var _response_id = "#{@response.id}";
  var _type        = "#{params[:id]}";
- content_for :sub_nav do
  = render 'shared/sub_nav_projects'

%h1.main_heading Implementers

= render "getting_started"

- form_tag response_implementer_path(@response, :current), :method => :put, :id => 'js_implementers_form' do
  %table.workplan
    %thead
      %tr.filler2
        %th{:colspan => 4}
        %th.no-padding{:colspan => "100"}
          %ul.tabs
            %li= link_to 'Yearly', response_implementers_path(@response), :class => 'active'

      %tr.head
        %th{:colspan => 3}
        %th.amount= current_fy(@response)
        %th.amount= next_fy(@response)
        %th
      %tr.head
        %th Activity
        %th{:colspan => 2} Implementer
        %th.amount
          Disbursements 
          = image_tag "hint.png", :title => "The portion of your expenditure that was given to each implementers in the past fiscal year", :class => "tooltip"
        %th.amount
          Planned Disbursements
          = image_tag "hint.png",:title => "The portion of your budget that will be given to each implementer in the current fiscal year", :class => "tooltip"
        %th.actions
    %tbody
      - @projects.each do |project|
        - project.activities.ordered.each do |activity|
          = render 'activity_row', :project => project, :activity => activity

      %tr.filler.js_projects_total_row
        %td{:colspan => "2", :class => "name fixed"}
        %td.total Total
        %td.total_amount
          %span.js_projects_total_spend_amount= @response.implementers_total_spend
          %span.currency= @response.currency
        %td.total_amount
          %span.js_projects_total_budget_amount= @response.implementers_total_budget
          %span.currency= @response.currency
        %td.actions

      %tr
        %td.borderless{:colspan => 100}
          = submit_tag "Save & Next >", :style => (@projects.detect{|p| p.activities.detect{|a| a.sub_activities.present? }} ? nil : 'display: none;'), :class => 'save_btn right'
          = submit_tag :Save, :style => (@projects.detect{|p| p.activities.detect{|a| a.sub_activities.present? }} ? nil : 'display: none;'), :class => 'save_btn right'

- if @projects.empty? || !@response.projects_have_activities?
  %p.centered.attention
    You have not added any activities.
    = link_to "Add them now.", response_workplans_path(@response)
