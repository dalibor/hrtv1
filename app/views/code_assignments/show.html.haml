:javascript
  var _activity_id = "#{@activity.id}";

- type = 'Past Expenditure'
- if @coding_type =~ /Budget/
  - type = 'Budget'

= render 'breadcrumb', :response => @response, :activity => @activity, :type => type


%h1.main_heading
  = "#{@activity.class.to_s.underscore.humanize.titleize} #{type == "Budget" ? "Current Budget" : type}"

.main_heading
  = render 'help'

= render 'activities/tab_nav', :activity => @activity

#classification
  %ul#activity_description.status

    %li
      %span= "#{type == "Budget" ? "current budget" : type} Amount:"
      = c(@activity.send(get_coding_type(@coding_type)), @activity.currency)

    = render  '/code_assignments/progress_bar', :activity => @activity

    - if current_user.admin? || current_user.activity_manager?
      %li
        %span= label_tag :approve_activity, "Approved?"
        = check_box_tag :approve_activity, true, @activity.approved, :class => "approve_activity", :"data-id" => @activity.id, :"data-response_id" => @activity.data_response.id

  = render 'tab_nav', :activity => @activity, :coding_type => @coding_type

  #activity_classification
    %div.tab1{:style => 'display: block'}
      = render 'tab'
