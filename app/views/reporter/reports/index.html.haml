- title 'Reports'

%h1.main_heading 
  Reports

%h2
  =image_tag "icon_lightning.png", :class => "heading_icon" 
  Your response
.dashboard_section
  = render :partial => 'shared/data_responses/show'

.first-half
  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Districts
  .dashboard_section
    %ul.admin_reports
      %li
        - link_to reports_districts_path, :class => "drill_down target" do
          Review District Expenditures and Current Budgets
          %span.hint Interactive reports
      %li

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    National
  .dashboard_section
    %ul.admin_reports
      %li
        - link_to reports_country_path, :class => "drill_down target" do
          Review National Expenditures and Current Budgets
          %span.hint Interactive reports
      %li

  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Activities
  .dashboard_section
    %ul.admin_reports
      %li=  link_to "Grouped by NSP", reporter_report_path('activities_by_nsp_budget', :dr_id => current_response.id), :class => "target"
      %li= link_to "Grouped by All Codes", reporter_report_path('activities_by_all_codes_budget', :dr_id => current_response.id), :class => "target"

  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Districts
  .dashboard_section
    %ul.admin_reports
      %li=  link_to "Grouped by NSP", reporter_report_path('districts_by_nsp_budget', :dr_id => current_response.id), :class => "target"
      %li= link_to "Grouped by All Codes", reporter_report_path('districts_by_all_codes_budget', :dr_id => current_response.id), :class => "target"
      
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Organizations
  .dashboard_section
    %ul
      %li= link_to "All Organizations", export_organizations_path, :class => "target"
      %li= link_to "Donor and NGO Organizations", export_organizations_path(:type => 'NGO'), :class => "target"
      %li= link_to "District Hospitals and Health Centers", export_organizations_path(:type => 'centers'), :class => "target"

.second-half
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Codes
  .dashboard_section
    %ul
      %li
        - link_to reporter_report_path('purposes'), :class => "target" do
          Purposes
          %span.hint from current budget and expenditure classifications screen
      %li
        - link_to reporter_report_path('inputs'), :class => "target" do
          Inputs
          %span.hint from current budget and expenditure classifications screen
      %li
        - link_to reporter_report_path('locations'), :class => "target" do
          Locations
          %span.hint from current budget and expenditure classifications screen

  %h2
    =image_tag "icon_users.png", :class => "heading_icon"
    Users
  .dashboard_section
    %ul
      %li= link_to "Users In My Organization", reporter_report_path('users_in_my_organization'), :class => "target"

  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Maps
  .dashboard_section
    .first-half
      %h3 Districts
      %ul
        %li=  link_to "Grouped by NSP", reporter_report_path('map_districts_by_nsp_budget', :dr_id => current_response.id), :class => "target"
        %li=  link_to "Grouped by All Codes", reporter_report_path('map_districts_by_all_codes_budget', :dr_id => current_response.id), :class => "target"

    .second-half
      %h3 Facilities
