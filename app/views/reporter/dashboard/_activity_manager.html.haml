- if current_or_last_response
  - hacked_response_projects_path = response_projects_path(current_or_last_response)
  - hacked_submit_response_path   = submit_response_path(current_or_last_response)
- else
  - hacked_response_projects_path = new_response_path
  - hacked_submit_response_path   = new_response_path

%h2
  Organizations I Manage
.dashboard_section
  %h3.tracked
    %br
    %span.light Total Organizations
    %span.large= @organizations.count
  %h3.tracked
    %br
    %span.light Approved Activities
    %span.large= @approved_orgs
  %h3.tracked
    %br
    %span.light Pending
    %span.large= @total_activities - @approved_orgs
  %h3.tracked.last
    %br
    %span.light Recently Submitted for Approval
    - unless @recent_responses.empty?
      %ul
        - @recent_responses.each do |r|
          %li= link_to r.organization.name, response_projects_path(r)
    - else
      %span.none No responses submitted recently

%h2
  =image_tag "icon_reporter.png", :class => "heading_icon"
  Organizations List
.dashboard_section
  %table.modern_table
    %thead
      %tr
        %td Organization
        %td Primary Contact (Phone)
        %td Secondary Contacts
        %td Activities Approved
    %tbody
      = render :partial => 'organization', :collection => @organizations

= render 'requests'

%h2
  Comments
.dashboard_comments
  - @comments.each do |comment|
    - model = comment.commentable
    - type = comment.commentable_type
    %li
      %h5.title
        %span= link_to truncate(model_name(model), :length => 40), commentable_path(type, model, current_user)
      %p.main= truncate(comment.comment, :length => 300)
      %p.time= "#{time_ago_in_words(comment.created_at)} ago" if comment.created_at
  .read_more= link_to "all comments", comments_path
