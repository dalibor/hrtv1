- budget_fiscal_year = budget_fiscal_year(@response)
- spend_fiscal_year = spend_fiscal_year(@response)
- fiscal_year_start_date = @response.organization.gor_fiscal_year[:start].try(:year)

:javascript
  var _budget = #{@response.data_request.budget.to_json};
  var _spend = #{@response.data_request.spend.to_json};

- f.inputs :class => 'inputs' do
  %li.last
    %h3 Basics
    %ul.dashboard_section
      = f.input :name, :hint => "Using a name that is specified on a contract or formal agreement is strongly recommended"
      = f.input :description, :input_html => { :rows => 2 }, :hint => "A general 1-2 sentence description of the purpose of the Project.", :required => false
      = f.input :start_date, :as => :string, :label => "Start date", :input_html => {:class => 'date_picker'}, :hint => "(YYYY-MM-DD) When the Project (and it's related Activities) started."
      = f.input :end_date, :as => :string, :label => "End date", :input_html => {:class => 'date_picker'}, :hint => "(YYYY-MM-DD) The end date for the Projectâ€™s implementation."

  - if @response.data_request.spend?
    %li.last
      %h3 Past Project Expenditure
      %ul.dashboard_section
        = f.input :spend, :label => "Past Expenditure", :hint => "Total amount spent in the past fiscal year. You can enter the total amount here OR below in the quarterly fields", :required => false

        %li.amounts.last
          %label Quarterly Expenditure
          %ul
            = f.input :spend_q4_prev, :label => "#{@response.spend_quarters_months('q1')}", :required => false
            = f.input :spend_q1, :label => "#{@response.spend_quarters_months('q2')}",      :required => false
            = f.input :spend_q2, :label => "#{@response.spend_quarters_months('q3')}",      :required => false
            = f.input :spend_q3, :label => "#{@response.spend_quarters_months('q4')}",      :required => false
            = f.input :spend_q4, :label => "#{@response.spend_quarters_months('q1_next_fy')}",    :required => false

  - if @response.data_request.budget?
    %li.last
      %h3 Project Current Budget
      %ul.dashboard_section
        %br
        = f.input :budget, :label => "Current Budget", :hint => "Total amount you are planning to spend in the upcoming fiscal year. You can enter the total amount here #{@response.request.budget_by_quarter? ? "OR below in the quarterly fields" : ""}", :required => false
        - if @response.request.budget_by_quarter?
          %li.amounts.last
            %label Quarterly budget
            %ul.js_quarterly_fields
              = f.input :budget_q4_prev, :label => "#{@response.budget_quarters_months('q1')}", :required => false
              = f.input :budget_q1, :label => "#{@response.budget_quarters_months('q2')}",      :required => false
              = f.input :budget_q2, :label => "#{@response.budget_quarters_months('q3')}",      :required => false
              = f.input :budget_q3, :label => "#{@response.budget_quarters_months('q4')}",      :required => false
              = f.input :budget_q4, :label => "#{@response.budget_quarters_months('q1_next_fy')}",      :required => false

        %br
        - unless @response.request.no_long_term_budgets?
          %li.amounts
            %label Long-term
            %ul
              = f.input :budget2, :label => "#{fiscal_year_start_date + 2}", :required => false if @response.request.year_2?
              = f.input :budget3, :label => "#{fiscal_year_start_date + 3}", :required => false if @response.request.year_3?
              = f.input :budget4, :label => "#{fiscal_year_start_date + 4}", :required => false if @response.request.year_4?
              = f.input :budget5, :label => "#{fiscal_year_start_date + 5}", :required => false if @response.request.year_5?

  %li.last
    %h3 Project Funding Sources
    %ul.dashboard_section
      %p.heading_hint The sources from which your organization receives funding for its Projects.

      .funding_flows
        - f.semantic_fields_for :in_flows do |ff|
          = render "projects/in_flow_fields", :f => ff
        .add
          = link_to_add_fields "Add funding source", f, :in_flows, "projects/", :class => 'create_alt marginless'

  %li.last
    %h3 Other
    %ul.dashboard_section
      = f.input :currency, :label => "Currency override", :as => :select, :collection => currency_options_for_select, :include_blank => true, :hint => " Override the currency for this Project only. (Your default is #{@response.currency})", :required => false, :input_html => { :class => "js_combobox" }
      = f.input :locations, :as => :check_boxes, :collection => ordered_locations(Location.ordered_by_short_display), :label => "Locations worked in", :hint => 'Check the box next to each district/province in which this Project was (or is currently being) implemented. If the Project is focused at the central level and not in any specific district or region, check the box next to the "National Level" option.', :required => false

- f.buttons :class => 'buttons', :style => 'float: none' do
  = f.commit_button :button_html => {:class => "last big_button"}

- unless @project.new_record?
  .delete_section
    = link_to "Delete this Project", response_project_path(@response, @project), :confirm => "Are you sure you want to delete this Project?", :method => :delete, :class => 'delete_action'
    %p
      %strong Warning:
      Once you delete a Project, you will lose all data associated with it, and there is no undo.
