    New Project
    %span= render 'help'
  = error_messages_for :project,  :header_message  => nil, :message => "Oops, we couldn't save your changes."
  - semantic_form_for @project, :url => response_projects_path(@response), :html => {:class => "basic_form"} do |f|
    = render 'form', :f => f

