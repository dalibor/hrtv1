- title(@project.name)
- budget_fiscal_year_prev = budget_fiscal_year_prev(@response)
- budget_fiscal_year = budget_fiscal_year(@response)
- spend_fiscal_year_prev = spend_fiscal_year_prev(@response)
- spend_fiscal_year = spend_fiscal_year(@response)

= render :partial => 'projects/sub_nav'

%h1.main_heading
  = @project.name

  %span
    %ul.manage_bar.inline
      %li= link_to "Edit", edit_response_project_path(@response, @project)
      %li= link_to "X", response_project_path(@response, @project), :confirm => "Are you sure you want to delete this project?", :method => :delete

%h3.form_heading Basics
%ul.dashboard_section
  %li
    %ul.row
      %li Name
      %li= @project.name
    %ul.row
      %li Description
      %li= @project.description
    %ul.row
      %li Start date
      %li= @project.start_date
    %ul.row
      %li End date
      %li= @project.end_date
    %ul.row
      %li Locations
      %li= @project.locations.map(&:short_display).join(', ')
    %ul.row
      %li Currency override
      %li= @project.currency

%h3.form_heading Past Expenditure
%ul.dashboard_section
  %li
    %ul.row
      %li Expenditure
      %li= c(@project.spend, @project.currency)
    %ul.row
      %li= "Expenditure Q4 #{spend_fiscal_year_prev}"
      %li= c(@project.spend_q4_prev, @project.currency)
    %ul.row
      %li= "Expenditure Q1 #{spend_fiscal_year}"
      %li= c(@project.spend_q1, @project.currency)
    %ul.row
      %li= "Expenditure Q2 #{spend_fiscal_year}"
      %li= c(@project.spend_q2, @project.currency)
    %ul.row
      %li= "Expenditure Q3 #{spend_fiscal_year}"
      %li= c(@project.spend_q3, @project.currency)
    %ul.row
      %li= "Expenditure Q4 #{spend_fiscal_year}"
      %li= c(@project.spend_q4, @project.currency)

%h3.form_heading Current Budget
%ul.dashboard_section
  %li
    %ul.row
      %li Current Budget
      %li= c(@project.budget, @project.currency)
    %ul.row
      %li Year + 2
      %li= c(@project.budget2, @project.currency)
    %ul.row
      %li Year + 3
      %li= c(@project.budget3, @project.currency)
    %ul.row
      %li Year + 4
      %li= c(@project.budget4, @project.currency)
    %ul.row.last
      %li Year + 5
      %li= c(@project.budget5, @project.currency)

%h3.form_heading In flows
%ul.dashboard_section
  - @project.in_flows.each do |flow|
    %li
      %ul.row
        %li From
        %li= flow.from.try(:name)
      %ul.row
        %li Current Budget
        %li= c(flow.budget, flow.currency)
      %ul.row
        %li Expenditure
        %li= c(flow.spend, flow.currency)
      %ul.row
        %li= "Expenditure Q4 #{spend_fiscal_year_prev}"
        %li= c(flow.spend_q4_prev, flow.currency)
      %ul.row
        %li= "Expenditure Q1 #{spend_fiscal_year}"
        %li= c(flow.spend_q1, flow.currency)
      %ul.row
        %li= "Expenditure Q2 #{spend_fiscal_year}"
        %li= c(flow.spend_q2, flow.currency)
      %ul.row
        %li= "Expenditure Q3 #{spend_fiscal_year}"
        %li= c(flow.spend_q3, flow.currency)
      %ul.row
        %li= "Expenditure Q4 #{spend_fiscal_year}"
        %li= c(flow.spend_q4, flow.currency)

%h3.form_heading Out flows
%ul.dashboard_section
  - @project.out_flows.each do |flow|
    %li
      %ul.row
        %li To
        %li= flow.from.try(:name)
      %ul.row
        %li Current Budget
        %li= c(flow.budget, flow.currency)
      %ul.row
        %li Expenditure
        %li= c(flow.spend, flow.currency)
      %ul.row
        %li= "Expenditure Q4 #{spend_fiscal_year_prev}"
        %li= c(flow.spend_q4_prev, flow.currency)
      %ul.row
        %li= "Expenditure Q1 #{spend_fiscal_year}"
        %li= c(flow.spend_q1, flow.currency)
      %ul.row
        %li= "Expenditure Q2 #{spend_fiscal_year}"
        %li= c(flow.spend_q2, flow.currency)
      %ul.row
        %li= "Expenditure Q3 #{spend_fiscal_year}"
        %li= c(flow.spend_q3, flow.currency)
      %ul.row
        %li= "Expenditure Q4 #{spend_fiscal_year}"
        %li= c(flow.spend_q4, flow.currency)

= render :partial => 'shared/comments', :comments => @comments
