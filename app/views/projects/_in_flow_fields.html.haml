- budget_fiscal_year_prev = budget_fiscal_year_prev(@response)
- budget_fiscal_year = budget_fiscal_year(@response)
- spend_fiscal_year_prev = spend_fiscal_year_prev(@response)
- spend_fiscal_year = spend_fiscal_year(@response)

.fields
  .edit_block
    = f.input :data_response_id, :as => :hidden, :value => @response.id, :required => false
    = f.input :organization_id_to, :as => :hidden, :value => @response.organization.id, :required => false
    .ff_from_container
      .implementer_container
        .ui_widget
          = f.input :from, :as => :select, :collection => funding_organizations_select, :hint => "The organization funding the Project", :required => false, :input_html => {:class => 'implementer_select combobox ff_from'}

    = f.input :spend, :label => "Past Expenditure", :hint => "The total amount that you have past expenditure in the past fiscal year", :required => false, :input_html => {:class => 'ff_spend'} 

    = f.input :budget, :label => "Current Budget", :hint => "The total amount that you are planning to past expenditure in the upcoming fiscal year", :required => false, :input_html => {:class => 'ff_budget'}

  .preview_block{:style => "display: none;"}

  .manage_block
    = link_to_remove_fields "X", f, :class => 'delete'


