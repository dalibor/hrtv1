%tr.filler2.sub-head
  %td{:colspan => 100}
    %h4
      Activities
      %span
        - link_to new_response_activity_path(@response, :project_id => project.id), :class => "add_row" do
          = image_tag "new.png"
          Add
      %span
        - link_to "#", :class => "add_row js_upload_btn" do
          = image_tag "new.png"
          Import
%tr.upload_box
  %td{:colspan => 100}
    = render 'activities_import', :project => project, :can_export =>project.activities.present?
- if activities.present?
  - activities.each do |activity|
    = render "activities/activity", :activity => activity
- else
  %tr.none
    %td{:colspan => 100}
      No activities found.
      = link_to "Add Activities now.", new_response_activity_path(response, :project_id => project.id)
