%tr
  %td{:colspan => 100, :class => 'new_project'}
    %h2
      Add Project
    - semantic_form_for @project, :url => response_projects_path(@response), :html => {:class => "basic_form new_project_form"} do |f|
      - f.inputs :class => 'inputs' do
        %li
          %label.required Name
        = f.input :name, :input_html => { 'data-hint' => 'Enter project name' }, :label => false
        %li
          %label Description
        = f.input :description, :input_html => { :rows => 1, 'data-hint' => 'Enter project description' }, :label => false
      - f.buttons :class => 'buttons' do
        = f.commit_button "Add project", :wrapper_html => {:class => 'save_project'}, :button_html => {:class => "create_button"}
        %li= image_tag "ajax-loader.gif", :class => "ajax-loader", :style => 'display: none;'
        %li= link_to "Cancel", "#", :class => 'cancel_add_project row_cancel'
