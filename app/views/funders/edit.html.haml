:javascript
  var _response_id = "#{@response.id}";
  var _type        = "#{params[:id]}";

- content_for :sub_nav do
  = render 'shared/sub_nav_projects'

%h1.main_heading Funders

= render 'getting_started'

- form_tag response_funder_path(@response, params[:id]), :method => :put, :id => 'js_funders_form' do
  %table.workplan
    %thead
      %tr
        %th.no-bg{:colspan => 4}
        %th.no-padding{:colspan => 100}
          %ul.tabs
            %li= link_to 'Yearly', edit_response_funder_path(@response, :spend), :class => (params[:id] == 'spend' ? 'active' : nil)
            %li= link_to 'Quarterly', edit_response_funder_path(@response, :budget), :class => (params[:id] == 'budget' ? 'active' : nil)
      %tr.head
        %th{:colspan => 3}
        - start_year = @response.request.start_date.try(:year)
        - end_year = @response.request.end_date.try(:year)
        - if start_year == end_year
          - prev_fy = "FY #{start_year}"
          - next_fy = "FY #{start_year+1}"
        - else
          - prev_fy = "FY #{start_year}-#{end_year}"
          - next_fy = "FY #{start_year+1}-#{end_year+1}"
        %th.amount= prev_fy
        %th.amount= next_fy
      %tr.head
        %th Project
        %th{:colspan => 2} Funder
        %th.amount Spend
        %th.amount Budget
    %tbody
      - @projects.each do |project|
        = render 'project_row', :project => project

      %tr.filler.js_projects_total_row
        %td{:colspan => 2}
        %td.total Total
        %td.total_amount
          %span.js_projects_total_spend_amount= @projects.map{|p| p.converted_funders_total_by_type('spend', false)}.sum
          %span.currency= @response.currency
        %td.total_amount
          %span.js_projects_total_budget_amount= @projects.map{|p| p.converted_funders_total_by_type('budget', false)}.sum
          %span.currency= @response.currency
      %tr
        %td.borderless{:colspan => 8}
          = submit_tag :Save, :style => (@projects.detect{|p| p.activities.present? } ? nil : 'display: none;'), :class => 'save_btn right big'

- if @projects.empty?
  %p.centered.attention
    You have not added any projects.
    = link_to "Add them now.", edit_response_workplan_path(@response, :spend)
