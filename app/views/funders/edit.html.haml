:javascript
  var _response_id = "#{@response.id}";
  var _type        = "#{params[:id]}";

- content_for :sub_nav do
  = render 'shared/sub_nav_projects'

%h1.main_heading Funders

= render 'getting_started'

- form_tag response_funder_path(@response, params[:id]), :method => :put, :id => 'js_funders_form' do
  %table.workplan
    %thead
      %tr
        %th.no-bg{:colspan => 2}
        %th.no-padding{:colspan => 6}
          %ul.tabs
            %li= link_to 'Spend', edit_response_funder_path(@response, :spend), :class => (params[:id] == 'spend' ? 'active' : nil)
            %li= link_to 'Budget', edit_response_funder_path(@response, :budget), :class => (params[:id] == 'budget' ? 'active' : nil)
      %tr.head
        %th{:colspan => 2}
        %th= @response.fiscal_year_start_date.try(:year)
        %th{:colspan => 5}= @response.fiscal_year_end_date.try(:year)
      %tr.head
        %th Project
        %th Funder
        %th Q4
        %th Q1
        %th Q2
        %th Q3
        %th Q4
        %th Total
    %tbody
      - @projects.each do |project|
        = render 'project_row', :project => project
          
      %tr.filler.js_projects_total_row
        %td{:colspan => 6}
        %td.total Total
        %td.total_amount
          %span.js_projects_total_amount= @projects.map{|p| p.funders_total_by_type(params[:id])}.sum
          %span.currency= @response.currency
      %tr
        %td.borderless{:colspan => 8}
          = submit_tag :Save, :style => (@projects.detect{|p| p.activities.present? } ? nil : 'display: none;'), :class => 'save_btn right big'
          
- if @projects.empty?          
  %p.centered.attention
    You have not added any projects.
    = link_to "Add them now.", edit_response_workplan_path(@response, :spend)
