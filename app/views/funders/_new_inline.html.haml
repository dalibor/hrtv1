%tr
  %td{:colspan => 7, :class => 'new_funder'}
    - semantic_form_for @funder, :url => response_funders_path(@response, :type => params[:type]), :html => {:class => "basic_form new_funder_form"} do |f|
      - f.inputs :class => 'inputs' do
        = f.input :project_id, :as => :hidden
        = f.input :data_response_id, :as => :hidden, :value => @response.id, :required => false
        = f.input :organization_id_to, :as => :hidden, :value => @response.organization.id, :required => false
        .buttons
          = f.input :from, :as => :select, :collection => funding_organizations_select, :required => false, :input_html => {:class => 'implementer_select combobox ff_from'}, :label => false
          = f.commit_button "Add funder", :wrapper_html => {:class => 'js_save_funder'}, :button_html => {:class => 'create_button'}
          %li= image_tag "ajax-loader.gif", :class => "ajax-loader", :style => 'display: none;'
          %li= link_to "Cancel", "#", :class => 'js_cancel_add_funder row_cancel'
