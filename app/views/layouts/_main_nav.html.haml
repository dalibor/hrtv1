- is_admin_controller = (controller.class == DashboardController || namespace(controller.class) == "Admin")
#main-nav
  .wrapper
    %ul
      %li.home_tab{:class => ( controller.class == DashboardController ? 'active' : nil)}
        %a{:href => dashboard_path}
          %span Home

      - if current_user.admin? && is_admin_controller
        - %w(organizations reports requests codes).each do |tab|
          = build_admin_nav_tab(tab)
        %li{:class => (Admin::UsersController == controller.class ? "active" : nil)}
          = link_to "Members", admin_users_path
      - else
        %li{:class => ([WorkplansController, ProjectsController, ActivitiesController, FundersController, ImplementersController, LongTermBudgetsController, OtherCostsController, ClassificationsController, CodeAssignmentsController, ResponsesController].include?(controller.class) ? "active" : nil)}
          = link_to 'Projects', response_workplans_path(current_or_last_response)

        %li{:class => ([Reporter::ReportsController, Reports::DistrictsController, Reports::Districts::ActivitiesController, Reports::Districts::OrganizationsController, Reports::CountriesController, Reports::Countries::OrganizationsController, Reports::Countries::ActivitiesController].include?(controller.class) ? 'active' : nil)}
          = link_to 'Reports', current_user.admin? ? admin_reports_path : reporter_reports_path

        %li{:class => ([OrganizationsController, UsersController].include?(controller.class) ? "active" : nil)}
          = link_to 'Settings', edit_organization_url(current_or_last_response.organization)
