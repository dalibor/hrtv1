- content_for :head do
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>

:javascript
  google.load("visualization", "1", {packages:["corechart", "treemap"]});
  var _spent_pie_values   = #{js_safe(@spent_pie_values)};
  var _budget_pie_values  = #{js_safe(@budget_pie_values)};
  var _code_spent_values  = #{js_safe(@code_spent_values)};
  var _code_budget_values = #{js_safe(@code_budget_values)};

%h1.main_heading
  = "Organization: #{h(friendly_name(@organization))}"

%ul.group
  %li= link_to "NSP", reports_district_organization_path(@location, @organization, :code_type => "nsp"), active_if(@nsp)
  %li= link_to "MTEF", reports_district_organization_path(@location, @organization, :code_type => "mtef"), active_if(@mtef)
  %li= link_to "Inputs", reports_district_organization_path(@location, @organization, :code_type => "cost_category"), active_if(@cost_category)
  %li= link_to "HSSP2 Strat Prog", reports_district_organization_path(@location, @organization, :code_type => "hssp2_strat_prog"), active_if(@hssp2_strat_prog)
  %li= link_to "HSSP2 Strat Obj", reports_district_organization_path(@location, @organization, :code_type => "hssp2_strat_obj"), active_if(@hssp2_strat_obj)

.full
  .first-half
    %h2= "#{@chart_name} Expenditure"
    #code_spent.bordered

  .second-half
    %h2= "#{@chart_name} Current Budget"
    #code_budget.bordered
