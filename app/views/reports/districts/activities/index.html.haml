- content_for :head do
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>

:javascript
  google.load("visualization", "1", {packages:["corechart"]});
  var _spent_pie_values       = #{js_safe(@spent_pie_values)};
  var _budget_pie_values      = #{js_safe(@budget_pie_values)};

%h1.main_heading
  Activities

.full
  .first-half
    %h2 Expenditure
    #spent_pie.bordered

  .second-half
    %h2 Current Budget
    #budget_pie.bordered

%h2= "Activities (#{short_page_entries_info(@activities)})"

= render 'reports/districts/activities/table', :activities => @activities, :location => @location

= will_paginate @activities
