- title 'Admin Reports'

%h1.main_heading All Reports

.first-half
  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    National
  .dashboard_section
    %ul.admin_reports
      %li

        - link_to reports_country_path, :class => "drill_down target" do
          = "Review National Expenditures and Current Budgets [#{current_user.current_request.title}]"
          %span.hint Interactive reports summarizing data at national level

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Districts
  .dashboard_section
    %ul.admin_reports
      %li
        - link_to reports_districts_path, :class => "drill_down target" do
          = "Review District Expenditures and Current Budgets [#{current_user.current_request.title}]"
          %span.hint Interactive reports comparing districts and summarizing data at district level

.second-half
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Activities
  .dashboard_section
    %ul.admin_reports
      %li= render 'report_row', :title => "Activity Overview Report", :key => 'activity_overview'
      -#%li= render 'report_row', :title => "Dynamic Query By Current Budget (beta)", :key => 'dynamic_query_report_budget'
      -#%li= render 'report_row', :title => "Dynamic Query By Expenditure (beta)", :key => 'dynamic_query_report_spent'
