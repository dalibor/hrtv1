- title 'Admin Reports'

%h1.main_heading All Reports

.first-half
  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    National
  .dashboard_section
    %ul.admin_reports
      %li

        - link_to reports_country_path, :class => "drill_down target" do
          = "Review National Expenditures and Current Budgets [#{current_user.current_request.title}]"
          %span.hint Interactive reports summarizing data at national level

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Districts
  .dashboard_section
    %ul.admin_reports
      %li
        - link_to reports_districts_path, :class => "drill_down target" do
          = "Review District Expenditures and Current Budgets [#{current_user.current_request.title}]"
          %span.hint Interactive reports comparing districts and summarizing data at district level

      %li= render 'report_row', :title => 'By Nsp', :key => 'districts_by_nsp_budget'

      %li= render 'report_row', :title => 'By All Codes', :key => 'districts_by_all_codes_budget'

  %h2
    =image_tag "icon_users.png", :class => "heading_icon"
    Users
  .dashboard_section
    %ul
      %li= render 'report_row', :title => 'By Organization', :key => 'users_by_organization'

  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Maps
  .dashboard_section
    .first-half
      %h3 Districts

      %ul
        %li= render 'report_row', :title => "By Partner Current Budget", :key => 'map_districts_by_partner_budget'
        %li= render 'report_row', :title => "By Partner Expenditure", :key => 'map_districts_by_partner_spent'
        %li= render 'report_row', :title => "By NSP", :key => 'map_districts_by_nsp_budget'
        %li= render 'report_row', :title => "By All Codes", :key => 'map_districts_by_all_codes_budget'


    .second-half
      %h3 Facilities
      %ul
        %li= render 'report_row', :title => "By Partner Current Budget", :key => 'map_facilities_by_partner_budget'
        %li= render 'report_row', :title => "By Partner Expenditure", :key => 'map_facilities_by_partner_spent'

.second-half
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Activities
  .dashboard_section
    %ul.admin_reports
      %li= render 'report_row', :title => "Dynamic Query By Current Budget (beta)", :key => 'dynamic_query_report_budget'
      %li= render 'report_row', :title => "Dynamic Query By Expenditure (beta)", :key => 'dynamic_query_report_spent'
      %li= render 'report_row', :title => "Simple Workplan", :key => 'activities_summary'
      %li= render 'report_row', :title => "By District", :key => 'activities_by_district'
      %li= render 'report_row', :title => "By NSP", :key => 'activities_by_nsp_budget'
      %li= render 'report_row', :title => "By NHA/NASA", :key => 'activities_by_nha'
      %li= render 'report_row', :title => "By All Codes", :key => 'activities_by_all_codes_budget'
      %li= render 'report_row', :title => "One Row Per District", :key => 'activities_one_row_per_district'
      %li= render 'report_row', :title => "By Current Budget Coding (beta)", :key => 'activities_by_budget_coding'
      %li= render 'report_row', :title => "By Current Budget Cost Categorization (beta)", :key => 'activities_by_budget_cost_categorization'
      %li= render 'report_row', :title => "By Current Budget Districts (beta)", :key => 'activities_by_budget_districts'
      %li= render 'report_row', :title => "By Expenditure Coding (beta)", :key => 'activities_by_expenditure_coding'
      %li= render 'report_row', :title => "By Expenditure Cost Categorization (beta)", :key => 'activities_by_expenditure_cost_categorization'
      %li= render 'report_row', :title => "By Expenditure Districts (beta)", :key => 'activities_by_expenditure_districts'
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Codes
  .dashboard_section
    %ul
      %li
        - link_to reporter_report_path('purposes'), :class => 'target' do
          Purpose (MTEF, NSP, NHA, etc) Codes
          %span.hint from current budget and expenditure classifications screen
      %li
        - link_to reporter_report_path('inputs'), :class => 'target' do
          Inputs
          %span.hint from current budget and expenditure classifications screen
      %li
        - link_to reporter_report_path('locations'), :class => 'target' do
          Location (District) Codes
          %span.hint from current budget and expenditure classifications screen
