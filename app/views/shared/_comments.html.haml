.full_width{:name => "comments"}
  %h2
    %a{:name => "comments"} Comments
  .dashboard_section.comments_input
    .big_gravatar
      = image_tag current_user.gravatar(60)
    = render 'comments/form', :comment => @comment
  %ul.comments_list.js_comments_list
    - comments.each do |comment|
      = render 'comments/comment', :comment => comment
