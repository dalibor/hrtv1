.simple_table.third.response_summary
  %table.summary
    %tbody
      %tr
        %td Point of Contact:
        %td= @response.contact_name
      %tr
        %td Phone:
        %td= @response.contact_phone_number
      %tr
        %td Office Phone
        %td= @response.contact_main_office_phone_number
      %tr
        %td Currency
        %td= @response.currency
      - unless @policy_maker
        %tr
          %td{:colspan => 2}= link_to 'Edit Settings', edit_organization_path(current_user.organization)
