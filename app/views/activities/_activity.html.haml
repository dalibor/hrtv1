%tr
  %td{:colspan => 2}
    = link_to truncate(activity.description.presence, :length => 100) || '(no description)', edit_response_activity_path(@response, activity), :title => activity.description, :class => 'tooltip'
  %td= n2cndrs(activity.spend, activity.currency)
  %td= n2cndrs(activity.budget, activity.currency)
  %td
    - if activity.am_approved?
      Approved
    - else
      %span.red Not Approved
    