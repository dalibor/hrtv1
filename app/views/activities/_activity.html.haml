%tr
  %td{:colspan => 2}
    = link_to activity.name.presence || 'Unnamed Activity', edit_response_activity_path(@response, activity), :title => activity.description, :class => 'tooltip'
  %td= n2cndrs(activity.spend, activity.currency)
  %td= n2cndrs(activity.budget, activity.currency)
  %td
    %ul
      = render 'activities/approve_budget', :activity => activity
