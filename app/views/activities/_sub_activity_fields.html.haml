.fields
  .edit_block
    %ul
      = f.input :data_response_id, :as => :hidden, :value => @response.id, :required => false
      .implementer_container
        .ui_widget
          = f.input :provider_mask, :label => "Implementer", :as => :select, :collection => funding_organizations_select, :hint => "The name of the organization that implemented this activity", :required => false, :input_html => {:class => 'js_implementer_select js_combobox'}

      - if @response.data_request.spend?
        = f.input :spend_mask, :required => false, :hint => "Amount or Percentage allocated to this Implementer from the main Activity's Expenditure.", :label => "Implementer Past Expenditure"
      - if @response.data_request.budget?
        = f.input :budget_mask, :required => false, :hint => "Amount or Percentage allocated to this Implementer from the main Activity's Current Budget.", :label => "Implementer Current Budget"

  .manage_block
    = link_to_remove_fields "x", f, :class => 'delete_button'
