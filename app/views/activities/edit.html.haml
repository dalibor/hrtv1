- title("Edit Activity")

= render :partial => 'projects/sub_nav'

= render 'breadcrumb', :response => @response, :activity => @activity

%h1.main_heading Edit Activity

.main_heading
  = render 'help'

%ul.response-notice

  - unless @activity.budget && @activity.spend
    - if (!@activity.spend || 0) && @activity.data_request.spend?
      %li= "Please enter the spend amount for this activity."
    - if (!@activity.budget || 0) && @activity.data_request.budget?
      %li= "Please enter the budget amount for this activity."

  - else
    - if @activity.data_request.budget? && (@activity.budget.nil? || @activity.budget == 0)
      %li= "Please enter the Budget amount for this activity."
      
    - if @activity.data_request.spend? && (@activity.spend.nil? || @activity.spend == 0)
      %li= "Please enter the Spend amount for this activity."

  - unless @activity.spend_classified?
    %li= "Please classify the Spend for this activity."

  - unless @activity.budget_classified?
    %li= "Please classify the Budget for this activity."

= render 'activities/tab_nav', :activity => @activity


.wrap-70
  = error_messages_for :activity, :header_message  => nil, :message => "Oops, we couldn't save your changes."

  - semantic_form_for @activity, :url => response_activity_path(@response, @activity), :html => {:class => "basic_form"} do |f|
    = render 'form', :f => f

  = render 'sub_activities_import_export', :activity => @activity

= render :partial => 'shared/comments', :comments => @comments
