- title(truncate(@other_cost.description, :length => 100))
- budget_fiscal_year_prev = budget_fiscal_year_prev(@response)
- budget_fiscal_year = budget_fiscal_year(@response)
- spend_fiscal_year_prev = spend_fiscal_year_prev(@response)
- spend_fiscal_year = spend_fiscal_year(@response)

= render 'shared/sub_nav_projects'

= render 'activities/tab_nav', :activity => @other_cost

%h1.main_heading
  = truncate(@other_cost.description, :length => 100)

  %span
    %ul.manage_bar.inline
      %li= link_to "Edit", edit_response_other_cost_path(@response, @other_cost)
      %li= link_to "x", response_other_cost_path(@response, @other_cost), :confirm => "Are you sure you want to delete this other cost?", :method => :delete

.wrap-70
  %h3.form_heading Basics
  %ul.dashboard_section
    %li
      %ul.row
        %li Project name
        %li= @other_cost.project.try(:name)
      %ul.row
        %li Description
        %li= @other_cost.description

  %h3.form_heading Past Expenditure
  %ul.dashboard_section
    %li
      %ul.row
        %li Past Expenditure
        %li= c(@other_cost.spend, @other_cost.currency)

  %h3.form_heading Current Budget
  %ul.dashboard_section
    %li
      %ul.row
        %li Budget
        %li= c(@other_cost.budget, @other_cost.currency)

  %h3.form_heading Classifications
  %ul.dashboard_section
    %li
      %ul.row
        %li Current Budget by Health Functions
        %li= b @other_cost.coding_budget_classified?
      %ul.row
        %li Current Budget by Locations
        %li= b @other_cost.coding_budget_district_classified?
      %ul.row
        %li Current Budget by Inputs
        %li= b @other_cost.coding_budget_cc_classified?
      %ul.row
        %li Past Expenditure by Health Functions
        %li= b @other_cost.coding_spend_classified?
      %ul.row
        %li Past Expenditure by Locations
        %li= b @other_cost.coding_spend_district_classified?
      %ul.row
        %li Past Expenditure by Inputs
        %li= b @other_cost.coding_spend_cc_classified?

= render :partial => 'shared/comments', :comments => @comments
