- f.inputs :class => 'inputs' do
  %li.last
    %h3 Basics
    %ul.dashboard_section
      = f.input :project_id, :label => "Project", :collection => @response.projects, :as => :select, :hint => "The Project this Other Cost correlates to"
      = f.input :name, :required => false, :hint => "The name of this Other Cost."
      = f.input :description, :input_html => { :rows => 2 }, :required => false, :hint => "A description of this Other Cost."
      = f.input :start_date, :as => :string, :label => "Start date", :input_html => {:class => 'date_picker'}, :hint => "(YYYY-MM-DD) When the Project (and it's related Activities) started.", :required => false
      = f.input :end_date, :as => :string, :label => "End date", :input_html => {:class => 'date_picker'}, :hint => "(YYYY-MM-DD) The end date for the Projectâ€™s implementation.", :required => false

  %li.last
    %h3== Past Other Cost Expenditure (#{@other_cost.currency})
    %ul.dashboard_section
      = f.input :spend, :label => "Past Expenditure", :hint => "The total amount that you have spent in the past fiscal year. You can enter the total amount here OR below in the quarterly fields", :required => false, :input_html => { :class => 'js_spend' }

      = render 'shared/spend_quarters', :f => f

  %li.last
    %h3== Other Cost Current Budget (#{@other_cost.currency})
    %ul.dashboard_section
      = f.input :budget, :label => "Current Budget", :hint => "The total amount that you are planning to spend in the upcoming fiscal year. You can enter the total amount here OR below in the quarterly fields", :required => false, :input_html => { :class => 'js_budget' }

      = render 'shared/budget_quarters', :f => f

  %li.last
    %h3== Implementers
    %ul.dashboard_section
      %p.hint Service Providers and partners you work with
      - hint = "Service Providers who implement activities for your organization's projects/activities. E.g. a NGO, a Health Facility Institution, Government office, or a District."
      - hint = hint + "<br>NOTE: You uploaded \"#{@other_cost.text_for_provider}\"" if !@other_cost.text_for_provider.blank? && @activity.provider.nil?
      .implementer_container
        = f.input :provider, :label => "Implementer", :as => :select, :collection => funding_organizations_select, :hint => hint, :required => false, :input_html => {:class => 'js_implementer_select'}
      / not sure what this partial was doing, the routes don't even work
      =# render :partial => 'shared/add_organizations'

  %li.last
    %h3== Other
    %ul.dashboard_section
      = f.input :beneficiaries, :as => :check_boxes, :label => "Beneficiaries", :hint => "Beneficiaries of your Other Cost, if applicable to any of these population groups."
      = f.input :text_for_beneficiaries, :input_html => { :rows => 2 }, :label => "Other beneficiaries", :as => :text, :required => false, :hint => "Beneficiaries of your Other Cost that are not listed above."

  %li
    %ul.horizontal
      - f.buttons :class => 'buttons' do
        = f.commit_button "Save", :class => "last", :button_html => {:class => "last big_button"}
        = f.commit_button "Save & Classify >", :class => "last", :button_html => {:class => "last big_button"}

- unless @other_cost.new_record?
  .delete_section
    = link_to "Delete this Other Cost", response_other_cost_path(@response, @other_cost), :confirm => "Are you sure you want to delete this other Cost?", :method => :delete, :class => "delete_button", :class => 'delete_action'
    %p
      %strong Warning:
      Once you delete an Other Cost, you will lose all data associated with it, and there is no undo.
