- title("Edit Other Cost")

= render 'breadcrumb', :response => @response, :activity => @other_cost

%h1.main_heading Edit Other Cost

.main_heading
  = render 'help'

%ul.response-notice
  - if @response.data_request.spend?
    - if !@other_cost.spend?
      %li= "Enter the Past Expenditure for this activity."
    - elsif !@other_cost.spend_classified?
      %li= "Please classify the Past Expenditure for this activity."

  - if @response.data_request.budget?
    - if !@other_cost.budget?
      %li= "Enter the Current budget for this activity."
    - elsif !@other_cost.budget_classified?
      %li= "Please classify the Current budget for this activity."

= render 'activities/tab_nav', :activity => @other_cost

.wrap-70
  = error_messages_for :other_cost,  :header_message  => nil, :message => "Oops, we couldn't save your changes."

  - semantic_form_for @other_cost, :url => response_other_cost_path(@response, @other_cost), :html => {:class => "basic_form"} do |f|
    = render 'form', :f => f

= render :partial => 'shared/comments', :comments => @comments
